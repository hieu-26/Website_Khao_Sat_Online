@model SurveyWebsite.Models.Survey

<h2>Xóa biểu mẫu</h2>

<div class="alert alert-warning">
    <p>Bạn có chắc chắn muốn xóa biểu mẫu <strong>@Model.Title</strong> không?</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="SurveyId" />
    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
    <a asp-action="MySurveys" class="btn btn-secondary">Hủy</a>
</form>
