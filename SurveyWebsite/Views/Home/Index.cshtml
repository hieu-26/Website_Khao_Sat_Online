@{
    ViewData["Title"] = "Trang chủ - Hệ thống khảo sát trực tuyến";
}

<div class="survey-app-container">
    <!-- Header với thanh tìm kiếm và menu người dùng -->
    @*     <header class="survey-header">
        <div class="search-container">
