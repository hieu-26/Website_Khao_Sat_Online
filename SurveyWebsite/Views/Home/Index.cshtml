    <!-- Nội dung chính -->
    <main class="survey-main-content">
        <div class="welcome-section">
            <h1>Chào mừng đến với hệ thống khảo sát trực tuyến</h1>
            <p>Tạo và quản lý các biểu mẫu khảo sát của bạn một cách dễ dàng</p>
        </div>

        <div class="survey-actions">
            <div class="action-card primary-action">
                <div class="card-icon">
                    <i class="fas fa-plus"></i>
                </div>
                <h3>Tạo khảo sát mới</h3>

                <a asp-controller="Survey" asp-action="Create" class="btn btn-primary">Bắt đầu</a>
            </div>

            <div class="action-card">
                <div class="card-icon">
                    <i class="fas fa-folder-open"></i>
                </div>
                <h3>Khảo sát của tôi</h3>

                <a asp-controller="Survey" asp-action="MySurveys" class="btn btn-outline-primary">Xem ngay</a>
            </div>

            <div class="action-card">
                <div class="card-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <h3>Tham gia khảo sát</h3>
             
                <a asp-controller="Survey" asp-action="PublicSurveys" class="btn btn-outline-primary">Khám phá</a>

            </div>
        </div>
    </main>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        /* Base styles */
        :root {
            --primary-color: #4285f4;
            --primary-hover: #3367d6;
            --text-color: #202124;
            --text-secondary: #5f6368;
            --border-color: #dadce0;
            --bg-color: #f8f9fa;
        }

        body {
            font-family: 'Google Sans', Arial, sans-serif;
            color: var(--text-color);
            background-color: var(--bg-color);
            margin: 0;
            padding: 0;
        }

        .survey-app-container {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Header styles */
        .survey-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 30px;
            background-color: white;
            box-shadow: 0 1px 2px rgba(0,0,0,0.1);
            position: sticky;
            top: 0;
            z-index: 100;
        }

